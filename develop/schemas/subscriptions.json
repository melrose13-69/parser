{
  "required": [
    "destination",
    "events",
    "name",
    "sendInterval"
  ],
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "sendInterval": {
      "type": "integer"
    },
    "destination": {
      "required": [
        "email",
        "slack"
      ],
      "type": "object",
      "properties": {
        "slack": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "email": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "events": {
      "type": "array",
      "items": {
        "required": [
          "name",
          "type"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        }
      }
    },
    "snooze": {
      "type": "array",
      "items": {
        "type": "object",
        "allOf": [
          {
            "type": "object",
            "required": [
              "allDay",
              "day",
              "from",
              "to"
            ],
            "properties": {
              "day": {
                "type": "string",
                "enum": [
                  "Sun",
                  "Mon",
                  "Tue",
                  "Wed",
                  "Thu",
                  "Fri",
                  "Sat"
                ]
              },
              "allDay": {
                "type": "boolean",
                "default": false
              },
              "from": {
                "required": [
                  "hour",
                  "minute"
                ],
                "type": "object",
                "properties": {
                  "hour": {
                    "minimum": 0,
                    "maximum": 23,
                    "type": "integer",
                    "format": "int64"
                  },
                  "minute": {
                    "minimum": 0,
                    "maximum": 59,
                    "type": "integer",
                    "format": "int64"
                  }
                }
              },
              "to": {
                "required": [
                  "hour",
                  "minute"
                ],
                "type": "object",
                "properties": {
                  "hour": {
                    "minimum": 0,
                    "maximum": 23,
                    "type": "integer",
                    "format": "int64"
                  },
                  "minute": {
                    "minimum": 0,
                    "maximum": 59,
                    "type": "integer",
                    "format": "int64"
                  }
                }
              }
            }
          }
        ]
      }
    }
  }
}